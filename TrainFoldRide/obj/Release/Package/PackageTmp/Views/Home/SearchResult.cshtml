@model TrainFoldRide.Models.SearchStations

@{
    ViewBag.Title = "Search Results";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>redirectedSearch</title>
</head>
<body>
    @using (Html.BeginForm("CalculateJourney", "Home"))
    {
        <div class="col-lg-12 title">
            <h2>Select your Station(s)</h2>
        </div>
        <div class="form-horizontal col-md-8">
            <div class="form-group">
                <div class="col-md-8">
                    Departure Station: @Html.DropDownList("depStations", "Please Select a station")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    Arrival Station: @Html.DropDownList("arrStations", "Please Select a station")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Calculate Journey" class="btn btn-warning btn-lg" />
                </div>             
            </div>
        </div>
    }
</body>
</html>
